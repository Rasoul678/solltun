import {NavWindow} from "./nav-window.slint";
import {MainWindow} from "./main-window.slint";

export component AppWindow inherits Window {
    in-out property <int> counter: 0;
    in-out property <string> app_name;
    in-out property <string> db_name;
    in-out property <bool> open_curtain: true;

    callback request-increase-value;
    callback add-db;

    background: black;
    width: 800px;
    height: 600px;

    HorizontalLayout {
        alignment: space-between;

        NavWindow {
            open_curtain: root.open_curtain;
        }

        MainWindow {
            app_name: root.app_name;
            counter: root.counter;
            db_name: root.db_name;
            open_curtain: root.open_curtain;

            toggle-curtain => {
                root.open_curtain = !root.open_curtain;
            }

            clicked => {
                root.request-increase-value();
            }

            add-db => {
                root.add-db();
            }
        }
    }
}
